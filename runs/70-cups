#!/bin/bash
# runs/cups - Printing support

sudo pacman -S --needed --noconfirm \
    cups \
    cups-pdf \
    ghostscript \
    gsfonts \
    system-config-printer

# Enable cups service (will start on boot)
sudo systemctl enable cups || echo "Note: systemctl enable may fail in chroot - cups will be enabled on first boot"

echo "CUPS printing system installed successfully!"
echo "Access printer configuration at: http://localhost:631"
