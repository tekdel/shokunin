#!/bin/bash
# runs/fonts - Fonts installation

sudo pacman -S --needed --noconfirm \
    ttf-dejavu \
    ttf-liberation \
    ttf-hack \
    ttf-jetbrains-mono \
    ttf-jetbrains-mono-nerd \
    ttf-fira-code \
    ttf-font-awesome \
    noto-fonts \
    noto-fonts-emoji \
    noto-fonts-cjk

# Rebuild font cache
fc-cache -fv

echo "Fonts installed successfully!"
