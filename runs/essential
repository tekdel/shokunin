#!/bin/bash
# runs/essential - Essential system packages

sudo pacman -S --needed --noconfirm \
    base-devel \
    git \
    vim \
    neovim \
    wget \
    curl \
    htop \
    btop \
    man-db \
    man-pages \
    bash-completion \
    less \
    unzip \
    zip \
    p7zip \
    tar \
    rsync \
    openssh \
    iwd \
    impala \
    bluetui \
    inetutils \
    usbutils \
    pciutils \
    plymouth \
    gnome-keyring \
    seahorse \
    power-profiles-daemon \
    bolt

echo "Essential packages installed successfully!"
echo "Note: Using iwd for WiFi management (managed via impala TUI)"
