#!/bin/bash
# runs/apps - Optional applications

# Web browser (zen-browser from AUR)
paru -S --needed --noconfirm --skipreview \
    zen-browser-bin

# File manager and thumbnails
sudo pacman -S --needed --noconfirm \
    nautilus \
    file-roller \
    ffmpegthumbnailer

# Media
sudo pacman -S --needed --noconfirm \
    mpv \
    imv

# Screen recording (GPU-accelerated with overlay UI, audio support)
paru -S --needed --noconfirm --skipreview \
    gpu-screen-recorder-ui

# PDF viewer
sudo pacman -S --needed --noconfirm \
    zathura \
    zathura-pdf-mupdf

# Password manager
sudo pacman -S --needed --noconfirm \
    keepassxc

# Office (uncomment if needed)
# sudo pacman -S --needed --noconfirm \
#     libreoffice-fresh

# Development & Database
paru -S --needed --noconfirm --skipreview \
    dbeaver

# Music & Entertainment
paru -S --needed --noconfirm --skipreview \
    spotify

# File sharing (AirDrop-like, works with phones)
paru -S --needed --noconfirm --skipreview \
    localsend-bin

# Communication (AUR - uncomment if needed)
# paru -S --needed --noconfirm --skipreview \
#     discord \
#     slack-desktop

echo "Applications installed successfully!"
