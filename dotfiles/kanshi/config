    output DP-5 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile dp6 {
    output DP-6 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile dp7 {
    output DP-7 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile dp8 {
    output DP-8 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile dp9 {
    output DP-9 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile dp10 {
    output DP-10 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile hdmi1 {
    output HDMI-A-1 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile hdmi2 {
    output HDMI-A-2 mode 3840x2160 position 0,0 scale 1
    output eDP-1 disable
}

profile laptop {
    output eDP-1 position 0,0 scale 1
}
