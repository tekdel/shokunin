#!/bin/bash
# Monitor switch script - manual switch between laptop and external monitor

LAPTOP="eDP-1"

# Check if external monitor is connected
if hyprctl monitors all | grep -q "LG UltraFine"; then
    # External connected - use external, disable laptop
    hyprctl keyword monitor "desc:LG Electronics LG UltraFine 901NTDV6P994,3840x2160,0x0,1"
    hyprctl keyword monitor "$LAPTOP,disable"
    hyprctl dispatch workspace 1
    notify-send -t 3000 "Monitor" "LG UltraFine enabled, laptop disabled"
else
    # No external - enable laptop
    hyprctl keyword monitor "$LAPTOP,1920x1200,0x0,1"
    hyprctl dispatch workspace 1
    notify-send -t 3000 "Monitor" "Laptop screen enabled"
fi
